<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.result.ResultActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:background="#5CABEA"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">


            <TextView
                android:text="Kết quả điểm danh"
                android:textStyle="bold"
                android:textSize="18sp"

                android:layout_marginLeft="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:background="#F1EEEE"
        android:padding="16dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/statusLinearLayout"
            android:padding="16dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginStart="40dp"
                android:layout_marginHorizontal="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sỉ số"/>
                <TextView
                    android:id="@+id/totalStudentTextView"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="40"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:textColor="#059DE3"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginHorizontal="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Có mặt"/>
                <TextView
                    android:id="@+id/countStudentTextView"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="12"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:textColor="#059DE3"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vắng"/>

                <TextView
                    android:layout_marginTop="8dp"
                    android:id="@+id/absentTextView"
                    android:textStyle="bold"
                    android:textColor="#059DE3"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lớp"/>

                <TextView
                    android:id="@+id/dateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textStyle="bold"
                    android:textColor="#059DE3"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Điểm danh tay"/>

                <Switch
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />
            </LinearLayout>

        </LinearLayout>


        <androidx.appcompat.widget.SearchView
            android:layout_below="@id/statusLinearLayout"
            android:id="@+id/studentSearchView"
            app:queryHint="Tìm kiếm"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_searchview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>




        <LinearLayout
            android:id="@+id/ln2"
            android:background="@drawable/bg_ln_result"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/studentSearchView"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="0dp"
                android:padding="4dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="Danh sách học sinh"/>

            <TextView
                android:layout_width="0dp"
                android:padding="4dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Trạng thái"/>


        </LinearLayout>
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/studentsRecyclerview"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/ln2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>