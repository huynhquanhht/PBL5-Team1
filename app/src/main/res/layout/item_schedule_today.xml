<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="4dp"
    android:paddingVertical="8dp"
    android:paddingHorizontal="32dp"
    android:layout_marginHorizontal="8dp"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/timeStartTextView"
        android:text="07:00 AM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/timeEndTextView"
        android:text="08:00 AM"
        android:layout_below="@id/timeStartTextView"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/subjectTextView"
        android:text="Nguyen Ly 2"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/timeStartTextView"
        android:layout_marginStart="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp" />

    <TextView
        android:id="@+id/codeClassTextView"
        android:text="10213630218n13"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/timeStartTextView"
        android:layout_below="@id/timeStartTextView"
        android:layout_marginStart="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/totalTextView"
            android:text="Total: 32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/roomTextView"
            android:text="08:00 AM"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



</RelativeLayout>